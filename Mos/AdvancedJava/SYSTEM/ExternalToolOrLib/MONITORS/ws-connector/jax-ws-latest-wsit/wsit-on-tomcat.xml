<project name="WSIT 1.0 EA On Tomcat" default="help" basedir=".">
    <property environment="env"/>
    <property name="tomcat.home" value="${env.CATALINA_HOME}"/>
    <property name="tomcat.lib.home" value="${tomcat.home}/shared/lib"/>
    <property name="tomcat.endorsed" value="${tomcat.home}/common/endorsed"/>
    <property name="java.home" value="${env.JAVA_HOME}"/>

    <condition property="jdk6">
        <equals arg1="${ant.java.version}" arg2="1.6"/>
    </condition>

    <condition property="endorsed-api-flagged">
        <equals arg1="${install.api}" arg2="true"/>
    </condition>
 
    <!-- the jdk6-message is always printed along with the 'help' message
         if JDK6 is being used.  it is also printed when installing with
         JDK6 but only if -Dinstall.api='true' is not specified on the 
         command-line (that conditional check is done by <jdk6-check>).
    -->

    <target name="jdk6-check" if="jdk6" unless="endorsed-api-flagged">
        <antcall target="jdk6-message"/>
        <echo message="IMPORTANT:"/>
        <echo message="  After this install completes, run ant again invoking the 'install-api' target."/>
        <echo/>
    </target>

    <target name="jdk6-message" if="jdk6">
        <echo message="NOTE: WSIT is being installed using JDK6."/>
        <echo/>
        <echo message="  The file 'web-services-api.jar' must be installed"/>
        <echo message="  into $JAVA_HOME/lib/endorsed for WSIT to prevent"/>
        <echo message="  conflicts between the JAX-WS 2.0 classes"/>
        <echo message="  bundled with JDK 6 and JAX-WS 2.1 bundled with WSIT."/>
        <echo/>
        <echo message="  You must have write-permissions on the JDK 6 directory."/>
        <echo message="  This is a concern when using a system-wide JDK installation."/>
        <echo/>
        <echo message="  To install webservices-api.jar, choose one of the following:"/>
        <echo/>
        <echo message="  Invoke 'ant -Dinstall.api=true install' to copy it"/>
        <echo message="  while doing a complete WSIT installation."/>
        <echo/>
        <echo message="  Invoke 'ant install-api' to install only"/>
        <echo message="  webservices-api.jar into the 'endorsed' directory."/>
        <echo/>
    </target>
    
    <target name="install" depends="jdk6-check" description="Install latest WSIT jars">
        <echo message="Installing WSIT 1.0 EA on ${tomcat.home} ..."/>

        <!-- TODO: Identify placeholder for tools.jar -->
        <copy toDir="${tomcat.lib.home}" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-rt.jar"/>
                <include name="webservices-tools.jar"/>
                <include name="webservices-extra.jar"/>
                <include name="webservices-extra-api.jar"/>
            </fileset>
        </copy>
        <copy toDir="${tomcat.endorsed}" overwrite="true">
            <fileset dir="lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
        <antcall target="install-api-check"/>
        <echo message="... installation complete."/>
    </target>

    <target name="install-api-check" if="endorsed-api-flagged ">
        <antcall target="install-api"/>
    </target>

    <target name="install-api" description="Installs 'webservices-api.jar' into $JAVA_HOME/lib/endorsed">
        <mkdir dir="${java.home}/lib/endorsed"/>
        <copy toDir="${java.home}/lib/endorsed" overwrite="true" failonerror="false">
            <fileset dir="lib">
                <include name="webservices-api.jar"/>
            </fileset>
        </copy>
    </target>

    <target name="uninstall">
        <delete>
            <fileset dir="${tomcat.lib.home}" includes="webservices-rt.jar, webservices-tools.jar, webservices-extra.jar, webservices-extra-api.jar"/>
        </delete>
        <delete>
            <fileset dir="${tomcat.endorsed}" includes="webservices-api.jar"/>
        </delete>
        <delete quiet="true">
            <fileset dir="${java.home}/lib/endorsed" includes="webservices-api.jar"/>
        </delete>
    </target>

    <target name="help">
        <echo message="install  :"/>
        <echo message="  Installs WSIT 1.0 EA on Tomcat"/>
        <echo/>
        <echo message="install-api: "/>
        <echo message="  Copies 'webservices-api.jar' into $JAVA_HOME/lib/endorsed"/>
        <echo message="  Only needed for JDK 6 and only if -Dinstall.api='true'"/>
        <echo message="  was not passed during WSIT installation"/>
        <echo/>
        <echo message="uninstall: "/>
        <echo message="  Uninstalls WSIT 1.0 EA from GlassFish v2"/>
        <echo/>
        <echo message="$CATALINA_HOME must be set to the installation directory of Tomcat."/>
        <echo/>
        <echo message="Usage:"/>
        <echo message="  ant -f wsit-on-tomcat.xml [-Dinstall.api='true'] {install,uninstall}"/>
        <antcall target="jdk6-message"/>
    </target>
</project>
